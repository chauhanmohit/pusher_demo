<section class="col-lg-12">
    <div class="col-md-12">
        <div class="col-md-4"></div>
        <div class="col-md-4">
          <div class="gap"></div>
          <div class="outtersection">
            <form class="form-horizontal" method="post" role="form" action="/send">
              <div class="form-group">
               <p>Send message</p>
              </div>
              <div class="form-group">
                <input type="email" class="form-control" placeholder="Email address" id="email" name="email" required />
              </div>
              <div class="form-group">
                <input type="text" class="form-control" placeholder="Send From" id="from" name="from" />
              </div>
              <div class="form-group">
                <input type="text" class="form-control" placeholder="Send To" id="to" name="to" />
              </div>
              <div class="form-group">
                <input type="text" class="form-control" placeholder="Message Title" id="title" name="title" required />
              </div>
              <div class="form-group">
                <textarea class="form-control" name="body" cols="30" rows="10" required >Message Body</textarea>
              </div>
              <button type="submit" class="btn btn-primary">Send</button>
              <a href="/getMessage" class="btn btn-warning">Messages</a>
            </form>
          </div>
        </div>
        <div class="col-md-4"></div>
    </div>
</section>