<section class="col-lg-12" ng-controller="PusherController">
    <div class="col-md-12">
      <div class="col-md-2"></div>
      <div class="col-md-8">
        <div class="gap"></div>
        <div class="form-group">
             <p>Records Listing...</p>
        </div>
        <div class="table-responsive">
        <table class="table table-striped">
          <thead>
          <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Level</th>
            <th>From</th>
            <th>To</th>
          </tr>
          </thead>
          <tbody>
            <tr ng-repeat="message in messages">
                <td>{{ message.nodeid }}</td>
                <td>{{ message.name }}</td>
                <td>{{ message.level }}</td>
                <td>{{ message.from }}</td>
                <td>{{ message.to }}</td>
            </tr>
            
            <% @info.each do |d| %>
            <tr>
                <td><%= d.nodeid %></td>
                <td><%= d.name %></td>
                <td><%= d.level %></td>
                <td><%= d.from %></td>
                <td><%= d.to %></td>
            </tr>
            <% end %>
            
          </tbody>
        </table>
        </div>
      </div>
      <div class="col-md-2">
        <div class="gap"></div>
        <a href="/" class="btn btn-success">Add Node</a>
      </div>
    </div>
</section>
