<section class="col-lg-12" ng-controller="PusherController">
    <div class="col-md-12">
      <div class="col-md-2"></div>
      <div class="col-md-8">
        <div class="gap"></div>
        <div class="form-group">
             <p>Records Listing...</p>
        </div>
        <div class="table-responsive">
        <table class="table table-striped">
          <thead>
          <tr>
            <th>Email</th>
            <th>From</th>
            <th>To</th>
            <th>Title</th>
            <th>Message</th>
          </tr>
          </thead>
          <tbody>
            <tr ng-repeat="message in messages">
                <td>{{ message.email }}</td>
                <td>{{ message.from }}</td>
                <td>{{ message.to }}</td>
                <td>{{ message.title }}</td>
                <td>{{ message.message }}</td>
            </tr>
            
            <% @info.each do |d| %>
            <tr>
                <td><%= d.email %></td>
                <td><%= d.from %></td>
                <td><%= d.to %></td>
                <td><%= d.title %></td>
                <td><%= d.message %></td>
            </tr>
            <% end %>
            
          </tbody>
        </table>
        </div>
      </div>
      <div class="col-md-2">
        <div class="gap"></div>
        <a href="/" class="btn btn-success">Send Message</a>
      </div>
    </div>
</section>
